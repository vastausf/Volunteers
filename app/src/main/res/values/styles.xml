<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="TextInputLayout" parent="AppTheme">
        <item name="android:layout_width">@dimen/view_size_xx_huge</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputEditText" parent="AppTheme">
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:background">@drawable/background_text_input_edit_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="SimpleButton" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:background">@drawable/background_simple_button</item>
    </style>

</resources>
