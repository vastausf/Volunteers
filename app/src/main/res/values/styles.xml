<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="TextInputLayout" parent="AppTheme">
        <item name="android:layout_width">@dimen/view_size_xx_huge</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputEditText" parent="AppTheme">
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:background">@drawable/background_text_input_edit_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_margin">@dimen/spacing_xxx_small</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="HeaderText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_margin">@dimen/spacing_xxx_small</item>
        <item name="android:textSize">@dimen/font_size_x_large</item>
    </style>

    <style name="SecondaryText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/spacing_x_tiny</item>
    </style>

    <style name="ReadText" parent="AppTheme">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_margin">@dimen/spacing_xxx_small</item>
    </style>

    <style name="SimpleButton" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:background">@drawable/background_simple_button</item>
    </style>

    <style name="SimpleAccentButton" parent="AppTheme">
        <item name="android:background">@drawable/background_accent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="SpreadLine" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_size_x_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:background">@color/colorSpread</item>
    </style>

    <style name="Icon" parent="AppTheme">
        <item name="android:layout_width">@dimen/view_size_small</item>
        <item name="android:layout_height">@dimen/view_size_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SwitchButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/view_size_small</item>
        <item name="android:layout_height">@dimen/view_size_small</item>
    </style>

</resources>
